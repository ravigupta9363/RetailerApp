<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_gradient"
    android:orientation="vertical"
    tools:context="com.example.ravi_gupta.retailerapp.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:src="@mipmap/logo"
            android:background="@android:color/transparent"
            android:id="@+id/activity_splash_logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="drugcorner"
            android:layout_gravity="center"
            android:textColor="#FFF"
            android:layout_marginTop="7dp"
            android:textSize="35dp"
            android:id="@+id/fragment_home_textview1"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/fragment_home_linear_layout"
        android:padding="15dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:background="@drawable/border_button"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:id="@+id/fragment_home_button1"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textAllCaps="false"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New User"
            android:background="@drawable/border_button"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:id="@+id/fragment_home_button2"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textAllCaps="false"/>

    </LinearLayout>

</RelativeLayout>
