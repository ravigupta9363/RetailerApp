<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="#36B666"
    android:orientation="vertical"
    android:weightSum="1">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center|left"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/navigationDrawerHeaderTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textColor="#ffffff"
            android:text="@string/navigation_drawer_header_name"
            android:textSize="16sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/navigationDrawerHeaderTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:text="@string/navigation_drawer_header_address"
            android:textSize="14sp"
            android:textStyle="normal"

            />
    </LinearLayout>

</RelativeLayout>