<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:paddingRight="15dp" android:paddingLeft="15dp"
    android:paddingTop="20dp" android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:id="@+id/dialog_order_confirm_linearlayout1">

            <TextView
                android:id="@+id/dialog_order_confirm_textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pack the order with the code"
                android:textSize="15sp" />

            <TextView
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/dialog_order_confirm_textview1"
                android:id="@+id/dialog_order_confirm_textview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DC001"
                android:textSize="18sp"
                android:gravity="right"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_below="@+id/dialog_order_confirm_linearlayout1">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"/>

            <Button
                android:background="@drawable/button_style"
                android:id="@+id/dialog_order_confirm_button1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="#36B666"
                android:textSize="13sp" />


            <Button
                android:background="@drawable/button_style"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/dialog_order_confirm_button1"
                android:id="@+id/dialog_order_confirm_button2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Ok"
                android:textColor="#36B666"
                android:textSize="13sp" />

    </LinearLayout>

</RelativeLayout>